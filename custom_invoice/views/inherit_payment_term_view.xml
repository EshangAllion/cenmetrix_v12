<odoo>
    <record id="inherit_payment_term_form_view" model="ir.ui.view">
        <field name="name">inherit.payment.term.form.view</field>
        <field name="model">account.payment.term</field>
        <field name="inherit_id" ref="account.view_payment_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="collecting_date" required="True"/>
            </xpath>
        </field>
    </record>
</odoo>

